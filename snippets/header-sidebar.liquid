<script>
(function () {
  function initSidebarAccordions(root) {
    root = root || document;

    // Make sure sidebar exists
    const sidebar = root.querySelector('#sidebar-menu') || root.querySelector('header-sidebar');
    if (!sidebar) return;

    // Delegate clicks (more reliable than attaching many handlers)
    // Prevent duplicate listeners
    if (sidebar.__saadaaAccordionBound) return;
    sidebar.__saadaaAccordionBound = true;

    function setIcon(section, stateOpen) {
      const btn = section.querySelector('.saadaa-accordion-title');
      if (!btn) return;
      const icon = btn.querySelector('.icon');
      if (!icon) return;
      icon.textContent = stateOpen ? 'âˆ’' : '+';
    }

    function closeMainAccordions(exceptSection) {
      sidebar.querySelectorAll('.saadaa-accordion-section[data-main]').forEach((s) => {
        if (exceptSection && s === exceptSection) return;
        s.classList.remove('open');
        setIcon(s, false);
      });
    }

    function normalizeIcons() {
      sidebar.querySelectorAll('.saadaa-accordion-section').forEach((section) => {
        // Only sections that actually behave like accordions (must have content)
        const content = section.querySelector('.saadaa-accordion-content');
        const btn = section.querySelector('.saadaa-accordion-title');
        if (!btn || !content) return;
        setIcon(section, section.classList.contains('open'));
      });
    }

    function ensureDefaultOpen() {
      const womenSection = sidebar.querySelector('#accordion-shop-women');
      const menSection = sidebar.querySelector('#accordion-shop-men');

      if (womenSection) {
        // Open women by default
        closeMainAccordions(womenSection);
        womenSection.classList.add('open');
        setIcon(womenSection, true);

        // Ensure men is closed (if present)
        if (menSection && menSection !== womenSection) {
          menSection.classList.remove('open');
          setIcon(menSection, false);
        }
      } else {
        // Fallback: if women not found, open first main accordion
        const firstMain = sidebar.querySelector('.saadaa-accordion-section[data-main]');
        if (firstMain) {
          closeMainAccordions(firstMain);
          firstMain.classList.add('open');
          setIcon(firstMain, true);
        }
      }
    }

    // Click handling
    sidebar.addEventListener('click', function (e) {
      const btn = e.target.closest('.saadaa-accordion-title');
      if (!btn) return;

      const section = btn.closest('.saadaa-accordion-section');
      if (!section) return;

      // Only treat as accordion if it has a content panel
      const content = section.querySelector('.saadaa-accordion-content');
      if (!content) return; // IMPORTANT: don't break normal links/buttons

      // Stop button default to avoid weird iOS/Safari behavior
      e.preventDefault();
      e.stopPropagation();

      const isMain = section.hasAttribute('data-main');
      const isOpen = section.classList.contains('open');

      if (isMain) {
        // Only one main open at a time
        closeMainAccordions();
        if (!isOpen) {
          section.classList.add('open');
          setIcon(section, true);
        } else {
          // If you prefer "main can't close", comment next 2 lines:
          section.classList.remove('open');
          setIcon(section, false);
        }
      } else {
        // Secondary accordions toggle individually
        section.classList.toggle('open');
        setIcon(section, section.classList.contains('open'));
      }
    }, { passive: false });

    // Initial state
    normalizeIcons();
    ensureDefaultOpen();
    normalizeIcons(); // run again after default open
  }

  // Run once on DOM ready
  document.addEventListener('DOMContentLoaded', function () {
    initSidebarAccordions(document);

    // In case Shopify injects/replaces sidebar later
    const obs = new MutationObserver(() => initSidebarAccordions(document));
    obs.observe(document.documentElement, { childList: true, subtree: true });
  });
})();
</script>


