<script>
  (function () {
    if (window.SAADAA_SURVEY_INIT) return;
    window.SAADAA_SURVEY_INIT = true;

    const surveyRoot = document.getElementById('saadaa-survey');
    if (!surveyRoot) return;

    const steps = surveyRoot.querySelectorAll('.sa-step');
    const totalQuestionSteps = 8; // Steps 1â€“8 are questions (intro + thanks excluded)

   const surveyData = {
  formType: "post_purchase",   // ðŸ‘ˆ REQUIRED
  pageUrl: window.location.href,
  customerId: {{ customer.id | json }},
  customerEmail: {{ customer.email | json }},
  customerPhone: {{ customer.default_address.phone | json }}
};



    const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbwcFM_SokNXuobEJU_FquvRzgZ_bL67kGwE8lh_54UMvm4JBZjZWOBs9nB8D0p5s7RY/exec';

    let currentStep = 0;

    function updateProgress(stepIndex) {
      const bar = surveyRoot.querySelector('.sa-progress-inner');
      const label = surveyRoot.querySelector('.sa-progress-label');
      if (!bar || !label) return;

      const questionIndex = Math.min(Math.max(stepIndex - 1, 0), totalQuestionSteps);
      const percent = (questionIndex / totalQuestionSteps) * 100;
      bar.style.width = percent + '%';

      if (questionIndex === 0) {
        label.textContent = 'Letâ€™s begin';
      } else {
        label.textContent = 'Question ' + questionIndex + ' of ' + totalQuestionSteps;
      }
    }

    function goToStep(stepIndex) {
      steps.forEach(function (step, idx) {
        step.classList.toggle('is-active', idx === stepIndex);
      });
      currentStep = stepIndex;
      updateProgress(stepIndex);
    }

    // Start button
    surveyRoot.querySelectorAll('[data-action="start"]').forEach(function (btn) {
      btn.addEventListener('click', function () {
        goToStep(1);
      });
    });

    // Option buttons â€“ store value then move to next step
    surveyRoot.querySelectorAll('.sa-option').forEach(function (btn) {
      btn.addEventListener('click', function () {
        const field = btn.getAttribute('data-field');
        const value = btn.getAttribute('data-value');
        if (field) {
          surveyData[field] = value;
        }
        goToStep(currentStep + 1);
      });
    });

    // Textarea + final submit
    const textForm = document.getElementById('saadaa-text-step');
    const statusEl = document.getElementById('saadaa-status');
    const submitBtn = document.getElementById('saadaa-submit-btn');

    if (textForm) {
      textForm.addEventListener('submit', function (e) {
        e.preventDefault();
        const feedback = document.getElementById('deliveryFeedback');
        surveyData.deliveryFeedback = feedback ? feedback.value.trim() : '';

        if (!SCRIPT_URL) {
          goToStep(9);
          return;
        }

        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.textContent = 'Submitting...';
        }
        if (statusEl) statusEl.textContent = '';

        fetch(SCRIPT_URL, {
          method: "POST",
          mode: "no-cors",
          body: JSON.stringify(surveyData),
          headers: {
            "Content-Type": "application/json"
          }
        })
          .then(function () {
            goToStep(9);
          })
          .catch(function (err) {
            console.error("Survey error:", err);
            if (statusEl) {
              statusEl.textContent =
                'Something went wrong. Your feedback may not be saved, but thank you for sharing.';
            }
            goToStep(9);
          })
          .finally(function () {
            if (submitBtn) {
              submitBtn.disabled = false;
              submitBtn.textContent = 'Submit';
            }
          });
      });
    }

    // Copy coupon code
    const copyBtn = document.getElementById('saadaa-copy-code');
    if (copyBtn) {
      copyBtn.addEventListener('click', function () {
        const codeEl = surveyRoot.querySelector('.sa-code');
        if (!codeEl) return;
        const text = codeEl.textContent.trim();
        if (navigator.clipboard && navigator.clipboard.writeText) {
          navigator.clipboard.writeText(text).then(function () {
            copyBtn.textContent = 'Copied!';
            setTimeout(function () {
              copyBtn.textContent = 'Copy code';
            }, 1800);
          });
        }
      });
    }

    // Init first view
    goToStep(0);
  })();
</script>
