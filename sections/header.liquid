<style>
.custom-announcement-bar {
  width: 100%;
  background: #faf8f6;
  color: #000;
  text-align: center;
  padding: 9px 0;
  font-size: 8.5px;
  font-family: inherit;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1200;
  border-bottom: 1px solid #eee;
  display: block;
  text-transform: uppercase;
}
.custom-bar-link {
  font-weight: bold;
  text-decoration: underline;
  color: #111;
  margin-left: 2px;
  transition: color 0.2s;
}
.custom-bar-link:hover { color: #d39229; }

/* Fade animation */
.fade { opacity: 1; transition: opacity 0.5s ease; }
.fade.out { opacity: 0; }
</style>

<div id="custom-announcement-bar" class="custom-announcement-bar" aria-live="polite">
  {% assign current_handle = '' %}
  {% if product %}{% assign current_handle = product.handle %}
  {% elsif collection %}{% assign current_handle = collection.handle %}
  {% elsif article %}{% assign current_handle = article.handle %}
  {% elsif page %}{% assign current_handle = page.handle %}
  {% endif %}

  {% comment %} Detect target **page title** safely {% endcomment %}
  {% assign _title = page.title | default: '' | strip | downcase %}

  {% comment %} Provide 3 custom messages (edit these) {% endcomment %}
  {% assign message1 = 'A gesture of gratitude — silver gift with every festive order.' %}
  {% assign message2 = 'Offer valid today only — shop with Gullak Coins, get silver.' %}
  {% assign message3 = 'Silver Coin gift valid once per customer, exchange only.' %}

  <span id="announcement-text" class="fade">
    {% if _title == 'light up your style' %}
      {{ message1 }}
    {% else %}
      OUR FIRST WINTER WEAR COLLECTION IS NOW LIVE! -
      <a href="/pages/a-little-warmth" class="custom-bar-link">SHOP NOW</a>
    {% endif %}
  </span>
</div>

<script>
(function () {
  var el = document.getElementById('announcement-text');
  if (!el) return;

  // Build messages array conditionally (Liquid resolves on server)
  var messages = [
    {% if _title == 'light up your style' %}
      "{{ message1 | replace: '"', '\"' }}",
      "{{ message2 | replace: '"', '\"' }}",
      "{{ message3 | replace: '"', '\"' }}"
    {% else %}
      'OUR FIRST WINTER WEAR COLLECTION IS NOW LIVE! - <a href="/pages/a-little-warmth" class="custom-bar-link">SHOP NOW</a>',
      {% if current_handle contains 'men' or current_handle contains 'kurta-1' or current_handle contains 'formal-shirt' or current_handle contains 'kurta-2' or current_handle contains 'kurtas-1' %}
        'NEW COLOR LAUNCH OLIVE GREEN COTTON PANT FOR MEN - <a href="/products/white-100-linen-half-sleeve-shirt-men" class="custom-bar-link">SHOP NOW</a>',
      {% else %}
        'YOUR FAVORITES, NOW IN NEW COLORS - <a href="/collections/new-color-launch" class="custom-bar-link">SHOP NOW</a>',
      {% endif %}
      'Free Delivery with Free Returns & Free Exchanges',
      'Loved by 7,00,000+ Customers ❤️',
      '100% Refund if you don&#39;t ❤️ it'
    {% endif %}
  ];

  // First message already rendered server-side
  var i = 1;
  var delayMs = 3000;   // visible duration
  var fadeMs  = 500;    // must match CSS

  setInterval(function () {
    el.classList.add('out');              // fade out
    setTimeout(function () {
      el.innerHTML = messages[i];         // swap text
      el.classList.remove('out');         // fade in
      i = (i + 1) % messages.length;
    }, fadeMs);
  }, delayMs);
})();
</script>





