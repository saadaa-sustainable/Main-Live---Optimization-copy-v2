@keyframes custom-bounce {
  0%, 100% { transform: translateY(0);}
  20% { transform: translateY(-4px);}
  40% { transform: translateY(0);}
  60% { transform: translateY(-2px);}
  80% { transform: translateY(0);}
}
@keyframes custom-glow {
