{% schema %}
{
  "name": "This is SAADAA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is SAADAA"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Worn, lived, loved."
    },
    {
      "type": "header",
      "content": "Banner Images"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image",
      "info": "Upload the wide version of the grid/stats image."
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image",
      "info": "Upload the vertical/square version for phones."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "This is SAADAA"
    }
  ]
}
{% endschema %}

{% style %}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: 20px 10px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  .tis-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  /* ——— HEADER ——— */
  .tis-header {
    margin-bottom: 30px;
  }
  .tis-title {
    font-size: 32px;
    font-weight: 400; /* Regular weight as per image */
    color: #111;
    letter-spacing: -0.5px;
  }
  .tis-subtitle {
    font-size: 18px;
    color: #555;
    font-weight: 400;
    margin: 0;
  }

  /* ——— IMAGES ——— */
  .tis-image-wrapper {
    width: 100%;
    display: block;
    line-height: 0;
  }
  
  .tis-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 12px; /* Optional: adds rounded corners like the reference */
  }

   @media (min-width: 768px) {
.tis-title{
    display:none;
}

.tis-subtitle{
    display:none;
}
   }

  /* Responsive Switching */
  .tis-desktop { display: block; }
  .tis-mobile { display: none; }

  @media (max-width: 768px) {
    .tis-title { font-size: 22px; }
    .tis-subtitle { font-size: 16px; }
    
    .tis-desktop { display: none; }
    .tis-mobile { display: block; }
  }
{% endstyle %}

<div class="tis-container">
  
  <div class="tis-header">
    {% if section.settings.heading != blank %}
      <h2 class="tis-title">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="tis-subtitle">{{ section.settings.subheading }}</p>
    {% endif %}
  </div>

  <div class="tis-image-wrapper">
    {% if section.settings.image_desktop != blank %}
      <img src="{{ section.settings.image_desktop | image_url: width: 1400 }}" 
           alt="{{ section.settings.heading }}" 
           class="tis-image tis-desktop" 
           loading="lazy">
    {% else %}
      <div class="tis-desktop" style="padding: 60px; background: #f4f4f4; color: #999;">Desktop Image Placeholder</div>
    {% endif %}

    {% if section.settings.image_mobile != blank %}
      <img src="{{ section.settings.image_mobile | image_url: width: 800 }}" 
           alt="{{ section.settings.heading }}" 
           class="tis-image tis-mobile" 
           loading="lazy">
    {% elsif section.settings.image_desktop != blank %}
      <img src="{{ section.settings.image_desktop | image_url: width: 800 }}" 
           alt="{{ section.settings.heading }}" 
           class="tis-image tis-mobile" 
           loading="lazy">
    {% endif %}
  </div>

</div>