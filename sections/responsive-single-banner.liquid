{% comment %}
  Single Responsive Banner (Separate Desktop/Mobile Uploads)
  Logic: Unclickable if no URL is provided.
{% endcomment %}

{%- style -%}
  .banner-wrapper-{{ section.id }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    padding: 0 {{ section.settings.horizontal_padding }}px;
    width: 100%;
    overflow: hidden;
  }

  .banner-img-{{ section.id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  /* Only apply hover effect if the link exists */
  .banner-link-{{ section.id }} {
    display: block;
    width: 100%;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .banner-link-{{ section.id }}:hover {
    opacity: 0.9;
  }
{%- endstyle -%}

<div class="banner-wrapper-{{ section.id }} {% unless section.settings.full_width %}page-width{% endunless %}">
  
  {%- if section.settings.link != blank -%}
    <a href="{{ section.settings.link }}" class="banner-link-{{ section.id }}">
  {%- endif -%}

    <picture>
      {%- if section.settings.image_mobile != blank -%}
        <source 
          media="(max-width: 767px)" 
          srcset="{{ section.settings.image_mobile | image_url: width: 800 }}"
        >
      {%- endif -%}

      {%- if section.settings.image_desktop != blank -%}
        <img
          src="{{ section.settings.image_desktop | image_url: width: 2000 }}"
          alt="{{ section.settings.image_desktop.alt | escape }}"
          class="banner-img-{{ section.id }}"
          loading="{% if section.index == 1 %}eager{% else %}lazy{% endif %}"
          width="{{ section.settings.image_desktop.width }}"
          height="{{ section.settings.image_desktop.height }}"
        >
      {%- else -%}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </picture>

  {%- if section.settings.link != blank -%}
    </a>
  {%- endif -%}
  
</div>

{% schema %}
{
  "name": "Single Responsive Banner",
  "settings": [
    {
      "type": "header",
      "content": "Desktop Settings"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Banner Image"
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Banner Image (Optional)"
    },
    {
      "type": "header",
      "content": "Layout & Links"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Banner Link (Leave blank for unclickable)"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Make Banner Full Width",
      "default": false
    },
    {
      "type": "range",
      "id": "horizontal_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Single Responsive Banner"
    }
  ]
}
{% endschema %}