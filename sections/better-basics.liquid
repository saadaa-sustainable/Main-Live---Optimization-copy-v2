      "default": "Read The Story"
    },
    {
      "type": "url",
      "id": "link_1_url",
      "label": "First Link URL"
    },
    {
      "type": "text",
      "id": "link_2_text",
      "label": "Second Link Text",
      "default": "Meet The Makers"
    },
    {
      "type": "url",
      "id": "link_2_url",
      "label": "Second Link URL"
    },
    {
