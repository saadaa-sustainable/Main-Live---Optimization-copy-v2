    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Together, let’s discover a better life :"
    },
    {
      "type": "text",
      "id": "hashtags",
      "label": "Hashtags",
      "default": "#RAHOSAADAA #PEHNOSAADAA"
    }
  ],
  "blocks": [
    {
      "type": "icon_block",
      "name": "Icon",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image"
        },
        {
          "type": "textarea",
          "id": "caption",
          "label": "Caption Text",
          "default": "सदाबहार | TIMELESS"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Better Basics",
      "blocks": [
