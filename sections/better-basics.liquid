{% comment %}
  Better Basics Section - Single Line Icons
{% endcomment %}

<style>
  .section-better-basics {
    background-color: {{ section.settings.bg_color }};
    padding: 60px 20px;
    text-align: center;
    color: {{ section.settings.text_color }};
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  .bb-container {
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
  }

  /* --- Header Styles --- */
  .bb-heading {
    font-size: 26px;
    line-height: 1.5;
    margin-bottom: 20px;
    text-transform: uppercase;
    font-weight: 400;
    color: {{ section.settings.text_color }};
  }

  /* --- Links Section --- */
  .bb-links {
    font-size: 16px;
    margin-bottom: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .bb-links a {
    text-decoration: underline;
    text-underline-offset: 4px;
    color: inherit;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }

  .bb-links a:hover {
    opacity: 0.7;
  }

  /* --- Icon Grid (The Fix) --- */
  .bb-icons-wrapper {
    display: flex;
    justify-content: center; /* Center the group */
    align-items: flex-start;
    gap: 40px; /* Space between items */
    margin-bottom: 50px;
    flex-wrap: nowrap; /* <--- CRITICAL: Forces single line */
    width: 100%;
  }

  .bb-icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1; /* Allows items to take equal width */
    max-width: 150px; /* Prevents them from getting too wide on desktop */
  }

  .bb-icon-image {
    width: 40px; 
    height: 40px;
    object-fit: contain;
    margin-bottom: 15px;
    display: block;
  }

  .bb-icon-text {
    font-size: 13px;
    text-transform: uppercase;
    color: #666;
    margin: 0;
    line-height: 1.4;
    white-space: nowrap; /* Keeps text on one line if possible */
  }

  /* --- Footer Section --- */
  .bb-footer-text {
    font-size: 16px;
    margin-bottom: 8px;
    color: #555;
  }

  .bb-hashtags {
    font-size: 16px;
    color: #555;
    font-weight: 600;
    text-transform: uppercase;
  }

  /* --- Mobile Responsiveness --- */
  @media (max-width: 768px) {
    .section-better-basics {
      padding: 40px 15px;
    }

    .bb-heading {
      font-size: 20px;
    }

    .bb-icons-wrapper {
      gap: 10px; /* Reduce gap significantly for mobile to fit on one line */
    }

    .bb-icon-text {
      font-size: 10px; /* Smaller text on mobile */
      white-space: normal; /* Allow text to wrap if screen is VERY small */
    }
    
    .bb-icon-image {
      width: 30px; /* Smaller icons on mobile */
      height: 30px;
      margin-bottom: 10px;
    }
  }
</style>

<div class="section-better-basics">
  <div class="bb-container">
    
    <h2 class="bb-heading">
      {{ section.settings.heading | newline_to_br }}
    </h2>

    <div class="bb-links">
      {% if section.settings.link_1_text != blank %}
        <a href="{{ section.settings.link_1_url }}">{{ section.settings.link_1_text }}</a>
      {% endif %}
      
      <span>and</span>
      
      {% if section.settings.link_2_text != blank %}
        <a href="{{ section.settings.link_2_url }}">{{ section.settings.link_2_text }}</a>
      {% endif %}
    </div>

    <div class="bb-icons-wrapper">
      {% for block in section.blocks %}
        <div class="bb-icon-item" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 100 | image_tag: class: 'bb-icon-image', loading: 'lazy' }}
          {% else %}
            <div style="width: 40px; height: 40px; background: #ddd; border-radius: 50%; margin-bottom: 15px; display: flex; align-items: center; justify-content: center;">?</div>
          {% endif %}
          <p class="bb-icon-text">{{ block.settings.caption }}</p>
        </div>
      {% endfor %}
    </div>

    <div class="bb-footer">
      <p class="bb-footer-text">{{ section.settings.footer_text }}</p>
      <p class="bb-hashtags">{{ section.settings.hashtags }}</p>
    </div>

  </div>
</div>

{% schema %}
