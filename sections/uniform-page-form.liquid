<style>
  .upf input ,.upf .input{
    border-bottom: .5px solid #333;
    outline: none;
    height:24px;
    font-size:11px;
    font-weight:300;
    
  }
  .upf_container .h6{
    color:#8D8D8D;
    font-weight:300;
  }
  .upf_container .h2{
    font-weight:500;
  }
  .upf label{
    font-size:10px;
        color: black;
  }
 .upf .upf_container{
        background: white;
    padding: 31px 22px;
  }
  .section-upf{
    position: relative;
    z-index: 2;
    margin-top: -32px;
  }
  .upf .button{
    margin-top:20px;
    margin-inline:24px;
    font-size:14px;
