{% schema %}
{
  "name": "Fabric Philosophy",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "At SAADAA, fabric comes first"
    },
    {
      "type": "richtext",
      "id": "text_1",
      "label": "First Paragraph",
      "default": "<p>We choose natural, breathable fibres that feel <strong>kinder on skin</strong>. Because when something is honest, easy, and timeless, it should also be <strong>made to last</strong>.</p>"
    },
    {
      "type": "richtext",
      "id": "text_2",
      "label": "Second Paragraph",
      "default": "<p>Every fabric we use is picked thoughtfully, tested for real Indian days, and re-engineered for better everyday performance - so it <em>Drapes Better, Wears Better, & gets Better with Time.</em></p>"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "label": "Show Bottom Divider",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#111111"
    }
  ],
  "presets": [
    {
      "name": "Fabric Philosophy"
    }
  ]
}
{% endschema %}

{% style %}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 36px 20px;
  }

  .fp-container {
    max-width: 850px;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 35px; /* Spacing between blocks */
  }

  /* ——— HEADING ——— */
  .fp-heading {
    font-size: 42px;
    font-weight: 400; /* Regular weight like image */
    margin: 0;
    line-height: 1.2;
    letter-spacing: -0.5px;
    color: #000;
  }

  /* ——— TEXT BLOCKS ——— */
  .fp-text {
    font-size: 18px;
    line-height: 1.6;
    color: #333;
    max-width: 780px;
  }
  
  .fp-text p {
    margin: 0;
  }

  /* Bold Styling */
  .fp-text strong {
    font-weight: 600;
    color: #000;
  }

  /* Italic Styling (Last sentence style) */
  .fp-text em {
    font-style: italic;
    font-weight: 500;
    color: #000;
    font-size: 19px; /* Slightly larger for emphasis */
  }

  /* ——— DIVIDER ——— */
  .fp-divider {
display:none;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} {         padding: 30px 20px;
     }
    .fp-heading { font-size: 23px; }
    .fp-text { font-size: 12px; }
    .fp-container { gap: 25px; }
    .fp-divider { width: 150px; display:none;}

    .fp-text em {
    font-size: 13px;
  }
}
{% endstyle %}

<div class="fp-container">
  
  {% if section.settings.heading != blank %}
    <h2 class="fp-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% if section.settings.text_1 != blank %}
    <div class="fp-text">
      {{ section.settings.text_1 }}
    </div>
  {% endif %}

  {% if section.settings.text_2 != blank %}
    <div class="fp-text">
      {{ section.settings.text_2 }}
    </div>
  {% endif %}

  {% if section.settings.show_divider %}
    <hr class="fp-divider">
  {% endif %}

</div>