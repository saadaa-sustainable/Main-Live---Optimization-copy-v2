pify.com\/api\/2024-07\/graphql.json\",\n      token: \"388bd37219d8ab7daee1c58a23c03cc8\"\n    };\n\n    const inr = new Intl.NumberFormat('en-IN', { maximumFractionDigits: 0 });\n\n    function escapeHtml(str = \"\") {\n      return String(str).replace(\/&\/g,\"&amp;\").replace(\/<\/g,\"&lt;\").replace(\/>\/g,\"&gt;\").replace(\/\"\/g,\"&quot;\").replace(\/'\/g,\"&#039;\");\n    }\n\n    async function fetchProductsByTag(tag) {\n      \/\/ Note: Added `tags` to the GraphQL query below to identify 'waist coat coords'\n      const query = `{ products(first: 20, query: \"tag:${tag}\") { edges { node { title handle onlineStoreUrl tags images(first: 1) { edges { node { url } } } variants(first: 1) { edges { node { price { amount } compareAtPrice { amount } } } } } } } }`;\n      const res = await fetch(SHOPIFY.endpoint, {\n        method: \"POST\",\n        headers: { \"Content-Type\": \"application\/json\", \"X-Shopify-Storefront-Access-Token\": SHOPIFY.token },\n        body: JSON.stringify({ query })\n      });\n      const json = await res.json();\n      \n      let products = (json?.data?.products?.edges || []).map(({ node }) => {\n        const v = node?.variants?.edges?.[0]?.node;\n        return {\n          title: node.title,\n          link: node.onlineStoreUrl || `https:\/\/saadaa.in\/products\/${node.handle}`,\n          image: node?.images?.edges?.[0]?.node?.url || \"\",\n          price: parseFloat(v?.price?.amount || \"0\"),\n          compareAt: v?.compareAtPrice?.amount ? parseFloat(v.compareAtPrice.amount) : null,\n          tags: node.tags || [] \/\/ Capturing tags for badge and sorting\n        };\n      });\n\n      \/\/ Sort logic: move products tagged 'waist coat coords' to the top\n      products.sort((a, b) => {\n        const aHasTag = a.tags.some(t => t.toLowerCase() === \"waist coat coords\");\n        const bHasTag = b.tags.some(t => t.toLowerCase() === \"waist coat coords\");\n        if (aHasTag && !bHasTag) return -1;\n        if (!aHasTag && bHasTag) return 1;\n        return 0; \n      });\n\n      return products;\n    }\n\n    function buildCardHTML(item, cat){\n      const img = item.image || '';\n      const title = escapeHtml(item.title || '');\n      const priceNum = Number(item.price);\n\n      const rupees = Number.isFinite(priceNum) ? inr.format(Math.round(priceNum)) : '';\n      const compareNum = (item.compareAt && item.compareAt > priceNum) ? item.compareAt : (Number.isFinite(priceNum) ? priceNum * 2 : null);\n      const compare = compareNum ? inr.format(Math.round(compareNum)) : '';\n\n      const link = item.link || '#';\n      const stripText = OFFER_TEXT_BY_CAT[cat] || '';\n\n      \/\/ Check if product contains the 'waist coat coords' tag to attach the NEW badge\n      const isWaistCoat = item.tags && item.tags.some(t => t.toLowerCase() === \"waist coat coords\");\n      const newBadgeHTML = isWaistCoat ? `<div class=\"pc-badge-new\">NEW<\/div>` : ``;\n\n      return `\n        <a class=\"pc-grid-link\" href=\"${escapeHtml(link)}\">\n          <div class=\"pc-grid-item\">\n            <div class=\"pc-product-image-wrapper\">\n              ${stripText ? `<div class=\"pc-offer-strip\" aria-label=\"${escapeHtml(stripText)}\">${escapeHtml(stripText)}<\/div>` : ``}\n              ${newBadgeHTML}\n              <img src=\"${img}\" alt=\"${title}\" loading=\"lazy\" \/>\n            <\/div>\n            \n            <div class=\"pc-product-title\">${title}<\/div>\n            \n            <div class=\"pc-price-row\">\n              <div class=\"pc-product-price\">₹${rupees}<\/div>\n              ${compare ? `<div class=\"pc-product-compare\">₹${compare}<\/div>` : ``}\n            <\/div>\n          <\/div>\n        <\/a>\n      `;\n    }\n\n    function renderTagCarousel(cat, items){\n      const wrapper = document.querySelector(`.pc-carousel[data-carousel=\"${cat}\"]`);\n      if(!wrapper) return;\n      const track = wrapper.querySelector('.pc-carousel-track');\n      if(!track) return;\n      track.innerHTML = items.length\n        ? items.map(item => `<div class=\"pc-carousel-item\">${buildCardHTML(item, cat)}<\/div>`).join('')\n        : `<div class=\"pc-grid-empty\" style=\"width:100%;\">No products found for tag: <b>${escapeHtml(CATEGORY_TAGS[cat] || '')}<\/b><\/div>`;\n      if (typeof wrapper.__updateArrows === \"function\") { setTimeout(wrapper.__updateArrows, 0); }\n    }\n\n    function computeStickyOffset(){\n      const sticky = document.getElementById('sticky-roundels');\n      const stickyH = sticky ? sticky.getBoundingClientRect().height : 0;\n      let topFixed = 0;\n      document.querySelectorAll('header, .site-header, .shopify-section-header-sticky, .announcement-bar').forEach(el => {\n        const cs = getComputedStyle(el);\n        if ((cs.position === 'fixed' || cs.position === 'sticky') && el.getBoundingClientRect().top <= 1) topFixed += el.getBoundingClientRect().height;\n      });\n      document.documentElement.style.setProperty('--sticky-offset', Math.round(stickyH + topFixed + 12) + 'px');\n    }\n    function getStickyOffsetPx(){ return parseInt(getComputedStyle(document.documentElement).getPropertyValue('--sticky-offset') || '0', 10) || 0; }\n\n    function attachCarouselNav(){\n      document.querySelectorAll('.pc-carousel').forEach(carousel => {\n        const track = carousel.querySelector('.pc-carousel-track');\n        const prev = carousel.querySelector('.pc-nav-prev');\n        const next = carousel.querySelector('.pc-nav-next');\n        prev.classList.add('is-hidden');\n        const updateArrows = () => {\n          const max = Math.max(0, track.scrollWidth - track.clientWidth);\n          const x = Math.round(track.scrollLeft);\n          if (x > 0) prev.classList.remove('is-hidden'); else prev.classList.add('is-hidden');\n          if (x >= max - 2) next.classList.add('is-hidden'); else next.classList.remove('is-hidden');\n        };\n        carousel.__updateArrows = updateArrows;\n        const scrollAmount = () => Math.max(track.clientWidth * 0.9, 320);\n        prev.addEventListener('click', () => track.scrollBy({ left: -scrollAmount(), behavior: 'smooth' }));\n        next.addEventListener('click', () => track.scrollBy({ left:  scrollAmount(), behavior: 'smooth' }));\n        track.addEventListener('scroll', updateArrows, { passive: true });\n        setTimeout(updateArrows, 0);\n        window.addEventListener('resize', updateArrows);\n      });\n    }\n\n    function scrollToCategory(cat){\n      const el = document.getElementById(`${cat}-banner`);\n      if(!el) return;\n      window.scrollTo({ top: Math.max((el.getBoundingClientRect().top + window.pageYOffset) - getStickyOffsetPx(), 0), behavior: 'smooth' });\n    }\n\n    function ensureRoundelInView(cat, behavior = 'smooth'){\n      const row = document.querySelector('#sticky-roundels .roundel-row');\n      const item = document.querySelector(`#sticky-roundels .category-item[data-cat=\"${cat}\"]`);\n      if(!row || !item) return;\n      const rowRect = row.getBoundingClientRect();\n      const itemRect = item.getBoundingClientRect();\n      if(!(itemRect.left < (rowRect.left + 10)) && !(itemRect.right > (rowRect.right - 10))) return;\n      row.scrollTo({ left: Math.max(0, item.offsetLeft - (row.clientWidth \/ 2) + (item.clientWidth \/ 2)), behavior });\n    }\n\n    let currentActiveCat = \"\";\n    function setActiveRoundel(cat, opts = { autoScroll: true, behavior: 'smooth' }){\n      document.querySelectorAll('#sticky-roundels .category-item').forEach(lbl => {\n        const isActive = lbl.getAttribute('data-cat') === cat;\n        const radio = lbl.querySelector('input[type=\"radio\"]');\n        lbl.setAttribute('aria-selected', isActive ? 'true' : 'false');\n        if (radio) radio.checked = isActive;\n      });\n      if (opts?.autoScroll) ensureRoundelInView(cat, opts.behavior || 'smooth');\n    }\n\n    let manualLockUntil = 0;\n    const nowMs = () => (typeof performance !== 'undefined' && performance.now) ? performance.now() : Date.now();\n\n    function onRoundelClick(e){\n      const cat = e.currentTarget.getAttribute('data-cat');\n      manualLockUntil = nowMs() + 800;\n      currentActiveCat = cat;\n      setActiveRoundel(cat, { autoScroll: true, behavior: 'smooth' });\n      scrollToCategory(cat);\n      setTimeout(syncActiveOnScroll, 850);\n    }\n\n    function syncActiveOnScroll(){\n      if (nowMs() < manualLockUntil) return;\n      \/\/ Updated keys\n      const keys = [\"coord-sets\", \"short-kurta-sets\", \"long-kurta-sets\"];\n      const banners = keys.map(k => document.getElementById(`${k}-banner`)).filter(Boolean);\n      const offset = getStickyOffsetPx();\n      const idx = banners.findIndex(h => (h.getBoundingClientRect().top - offset) > 6);\n      let currentIdx;\n      if (idx === -1) currentIdx = banners.length - 1; else if (idx === 0) currentIdx = 0; else currentIdx = idx - 1;\n      const cat = banners[currentIdx].id.replace('-banner','');\n      if (cat !== currentActiveCat) {\n        currentActiveCat = cat;\n        setActiveRoundel(cat, { autoScroll: true, behavior: 'smooth' });\n      }\n    }\n\n    async function loadAllTagCarousels(){\n      const cats = Object.keys(CATEGORY_TAGS);\n      cats.forEach(cat => {\n        const track = document.querySelector(`.pc-carousel[data-carousel=\"${cat}\"] .pc-carousel-track`);\n        if (track) track.innerHTML = `<div class=\"pc-grid-empty\" style=\"width:100%;\">Loading…<\/div>`;\n      });\n      for (const cat of cats) {\n        try{\n          const items = await fetchProductsByTag(CATEGORY_TAGS[cat]);\n          renderTagCarousel(cat, items);\n        }catch(err){ console.error(\"Tag load failed:\", cat, err); }\n      }\n    }\n\n    document.addEventListener('DOMContentLoaded', () => {\n      computeStickyOffset();\n      attachCarouselNav();\n      document.querySelectorAll('#sticky-roundels .category-item').forEach(lbl => lbl.addEventListener('click', onRoundelClick));\n      loadAllTagCarousels();\n      window.addEventListener('scroll', syncActiveOnScroll, { passive: true });\n      window.addEventListener('resize', () => { computeStickyOffset(); syncActiveOnScroll(); });\n      \/\/ Updated Initial Active\n      currentActiveCat = \"coord-sets\";\n      setActiveRoundel(currentActiveCat, { autoScroll: true, behavior: 'auto' });\n      syncActiveOnScroll();\n    });\n  <\/script>\n<\/body>\n<\/html>","text_alignment":"center"}},"custom_liquid_FtYYMQ":{"type":"custom-liquid","disabled":true,"name":"Floating Badge diwali page use gullak coin 111","settings":{"separate_section_with_border":true,"remove_vertical_spacing":true,"remove_horizontal_spacing":true,"liquid":"<!-- Floating Badge: Non-clickable -->\n<div\n  class=\"floating-cta\"\n  aria-live=\"polite\"\n  aria-label=\"Claim Your Silver Coin at Checkout\"\n>\n  Use Gullak Rewards to Claim Your Silver Coin at Checkout\n<\/div>\n\n<style>\n  .floating-cta{\n    position: fixed;\n    left: 50%;\n    bottom: calc(76px + env(safe-area-inset-bottom, 0));\n    transform: translateX(-50%);\n    background: #2eb642;           \/* BG color *\/\n    color: #fff;                    \/* Text color *\/\n    text-decoration: none;\n    padding: 12px 18px;\n    border-radius: 9999px;          \/* Fully rounded *\/\n    font-weight: 600;\n    font-size: 14px;\n    line-height: 1;\n    box-shadow: 0 8px 20px rgba(0,0,0,.15);\n    z-index: 9999;\n    -webkit-tap-highlight-color: transparent;\n    \/* Non-interactive visual *\/\n    cursor: default;\n  }\n\n  \/* Mobile tweaks *\/\n  @media (max-width: 480px){\n    .floating-cta{\n      padding: 12px 10px;\n      font-size: 9px;\nwidth: 260px;\n    }\n  }\n<\/style>","text_alignment":"center"}}},"order":["main","custom_liquid_ExLBxn","scrolling_content_gCtjen","responsive_single_banner_EFht6E","custom_liquid_mEUcbr","custom_liquid_9anbWB","custom_liquid_8ejDYt","custom_liquid_r4XWBc","custom_liquid_FtYYMQ"]}