:#000;font-weight:700;letter-spacing:1px;}\n    #sda-promo-cards .sda-card:hover p,\n    #sda-promo-cards .sda-card:focus-visible p{color:#000;}\n  }\n\n  \/* —— tooltip —— *\/\n  #sda-promo-cards .sda-tip{\n    position:absolute;bottom:calc(100% + 10px);left:50%;\n    --sda-shift-x:0px;\n    transform:translateX(calc(-50% + var(--sda-shift-x))) translateY(8px);\n    background:#fff;color:#000;font-size:13px;line-height:1.35;\n    padding:6px 8px;border-radius:8px;box-shadow:0 10px 24px rgba(0,0,0,.15);\n    max-width:260px;text-align:center;z-index:9999; \/* very high to beat theme *\/\n    pointer-events:none;opacity:0;transform-origin:bottom center;\n    transition:opacity .16s ease,transform .16s ease;\n  }\n  #sda-promo-cards .sda-tip::after{\n    content:\"\";position:absolute;top:100%;left:50%;transform:translateX(-50%);\n    width:0;height:0;border-left:8px solid transparent;border-right:8px solid transparent;border-top:8px solid #fff;\n    filter:drop-shadow(0 2px 2px rgba(0,0,0,.08));\n  }\n  #sda-promo-cards .sda-tip.is-visible{\n    opacity:1;transform:translateX(calc(-50% + var(--sda-shift-x))) translateY(0);\n  }\n\n  @media (max-width:768px){\n    #sda-promo-cards.sda-wrap{gap:17px;padding:7px 7px;flex-wrap:nowrap;}\n    #sda-promo-cards .sda-card{padding:7px;border-radius:10px;}\n    #sda-promo-cards .sda-count{font-size:10px;font-weight:600;}\n    #sda-promo-cards .sda-card p{font-size:8.4px;}\n    #sda-promo-cards .sda-tip{font-size:10px;max-width:150%;width:118px;}\n  }\n<\/style>\n\n<script>\n(() => {\n  const root = document.getElementById('sda-promo-cards');\n  if (!root) return;\n\n  \/\/ One shared tooltip node\n  const tip = document.createElement('div');\n  tip.className = 'sda-tip';\n  tip.setAttribute('role','status');\n  tip.setAttribute('aria-live','polite');\n\n  function open(card){\n    \/\/ Close any other open card first\n    const current = root.querySelector('.sda-card[data-open=\"1\"]');\n    if (current && current !== card) close(current);\n\n    tip.textContent = card.getAttribute('data-tip') || '';\n    card.appendChild(tip);\n    void tip.offsetWidth;                    \/\/ reflow for transition\n    tip.classList.add('is-visible');\n    card.dataset.open = '1';\n    card.setAttribute('aria-expanded','true');\n    clampX();\n  }\n\n  function close(card){\n    if (!card || card.dataset.open !== '1') return;\n    card.setAttribute('aria-expanded','false');\n    card.removeAttribute('data-open');\n    tip.classList.remove('is-visible');\n    setTimeout(() => {\n      if (tip.parentNode === card) card.removeChild(tip);\n    }, 180);\n  }\n\n  function toggle(card){\n    if (card.dataset.open === '1') close(card);\n    else open(card);\n  }\n\n  \/\/ Click inside: toggle the clicked card (and stop bubbling so outside handler won’t run)\n  root.addEventListener('click', (e) => {\n    const card = e.target.closest('.sda-card');\n    if (!card || !root.contains(card)) return;\n    e.stopPropagation();\n    toggle(card);\n  });\n\n  \/\/ Keyboard support\n  root.addEventListener('keydown', (e) => {\n    const card = e.target.closest('.sda-card');\n    if (!card) return;\n    if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); toggle(card); }\n    if (e.key === 'Escape') { close(card); }\n  });\n\n  \/\/ Outside click: close (capture-phase + composedPath for robustness)\n  document.addEventListener('click', (e) => {\n    const path = e.composedPath ? e.composedPath() : [];\n    if (path.includes(root) || root.contains(e.target)) return; \/\/ click was inside → ignore\n    const openCard = root.querySelector('.sda-card[data-open=\"1\"]');\n    if (openCard) close(openCard);\n  }, true);\n\n  \/\/ Keep bubble within viewport\n  window.addEventListener('resize', clampX);\n  window.addEventListener('scroll', clampX, true);\n\n  function clampX(){\n    const openCard = root.querySelector('.sda-card[data-open=\"1\"]');\n    if (!openCard) return;\n    const rect = tip.getBoundingClientRect();\n    const overflowLeft = Math.max(0, 10 - rect.left);\n    const overflowRight = Math.max(0, rect.right - (window.innerWidth - 10));\n    const shift = overflowLeft ? overflowLeft : (overflowRight ? -overflowRight : 0);\n    tip.style.setProperty('--sda-shift-x', shift + 'px'); \/\/ uses your CSS var\n  }\n})();\n<\/script>","text_alignment":"center"}},"custom_liquid_M9cdmn":{"type":"custom-liquid","custom_css":[],"name":"Pick any 2 & 4 Code","settings":{"separate_section_with_border":false,"remove_vertical_spacing":true,"remove_horizontal_spacing":true,"liquid":"{% render 'all-in-one-cotton-page-code' %}","text_alignment":"center"}}},"order":["main","custom_liquid_8fBtGV","custom_liquid_fzkgwB","custom_liquid_M9cdmn"]}